<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    <changeSet id="table-user" author="vadim">
        <createTable tableName="user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="fullname" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-role" author="vadim">
        <createTable tableName="role">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="role" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-userrole" author="vadim">
        <createTable tableName="userrole">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-userbook" author="vadim">
        <createTable tableName="userbook">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="read_status" type="varchar(25)">
                <constraints nullable="true"/>
            </column>
            <column name="bought_date" type="date">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-borrowedbook" author="vadim">
        <createTable tableName="borrowedbook">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="userbook_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="debtor" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="date_borrowed" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="date_return" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="table-friendship" author="vadim">
        <createTable tableName="friendship">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_one" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_two" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="foreign-keys" author="vadim">
        <addForeignKeyConstraint baseTableName="userbook" baseColumnNames="user_id"
                                 constraintName="fk_userbook_user" referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="borrowedbook" baseColumnNames="userbook_id"
                                 constraintName="fk_borrowedbook_userbook" referencedTableName="userbook"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="borrowedbook" baseColumnNames="debtor"
                                 constraintName="fk_borrowedbooks_user" referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="friendship" baseColumnNames="user_one"
                                 constraintName="fk_friendship_user_one" referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="friendship" baseColumnNames="user_two"
                                 constraintName="fk_friendship_user_two" referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="userrole" baseColumnNames="user_id"
                                 constraintName="fk_userrole_user" referencedTableName="user"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="userrole" baseColumnNames="role_id"
                                 constraintName="fk_userrole_role" referencedTableName="role"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="vadim" id="insert-role">
        <insert tableName="role">
            <column name="role">USER</column>
        </insert>
    </changeSet>
